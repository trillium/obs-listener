# Application Configuration
# Copy this file to .env.local and set your values

# Port for the development and production server
PORT=7328

# OBS WebSocket Configuration
# Set your default OBS WebSocket password here
# Leave empty if no password is required
NEXT_PUBLIC_OBS_DEFAULT_PASSWORD=your_obs_password_here

# Optional: Set default connection settings
NEXT_PUBLIC_OBS_DEFAULT_ADDRESS=localhost
NEXT_PUBLIC_OBS_DEFAULT_PORT=4455

# Auto-connect on app load (true/false)
NEXT_PUBLIC_OBS_AUTO_CONNECT=true
